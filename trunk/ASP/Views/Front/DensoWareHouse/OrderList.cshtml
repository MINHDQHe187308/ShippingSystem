@* ~/Views/Front/Order/OrderList.cshtml *@
@using System
@model IEnumerable<ASP.Models.Front.Order>

@{
    ViewData["Title"] = "Order List";
    Layout = "../Shared/Layout/Front/_Layout";
}

<div class="text-center mb-4">
    <h1 class="fw-bold"><i class="bi bi-receipt"></i> Order List</h1>
</div>

<div class="d-flex justify-content-end mb-4">
    <div class="card" style="width: 400px;">
        <div class="card-header">
            <h6 class="fw-bold">Filters</h6>
        </div>
        <div class="card-body p-3">
            <form method="get">
                <div class="row">
                    <div class="col-6">
                        <label class="form-label small mb-1">Day of Week</label>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text"><i class="bi bi-calendar3"></i></span>
                            <select name="dayOfWeek" class="form-select form-select-sm" onchange="this.form.submit()">
                                <option value="">All Days</option>
                                @foreach (DayOfWeek d in Enum.GetValues<DayOfWeek>())
                                {
                                    <option value="@d" selected="@(ViewBag.DayOfWeek?.ToString() == d.ToString() ? "selected" : null)">@d</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <label class="form-label small mb-1">Customer Code</label>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                            <select name="customerCode" class="form-select form-select-sm" onchange="this.form.submit()">
                                <option value="">All Customers</option>
                                @if (ViewBag.CustomerCodes != null)
                                {
                                    @foreach (var code in ViewBag.CustomerCodes)
                                    {
                                        <option value="@code" selected="@(ViewBag.CustomerCode?.ToString() == code ? "selected" : null)">@code</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@{
    var grouped = Model.GroupBy(o => o.StartTime.Date).OrderBy(g => g.Key);
}

@foreach (var group in grouped)
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <span class="badge bg-secondary me-2 fs-5"><i class="bi bi-calendar-day me-1"></i>@group.Key.ToString("dddd")</span>
                    <span class="badge bg-secondary me-2 fs-5"><i class="bi bi-receipt me-1"></i>@group.Count() Order</span>
                </div>
                <h4 class="fw-bold">@group.Key.ToString("yyyy-MM-dd")</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="ordersTable_@group.Key.ToString("yyyyMMdd")">
                    <thead class="table-dark">
                        <tr>
                            <th>Customer Code</th>
                            <th>Ship Date</th>
                            <th>Trans Code</th>
                            <th>Total Pallet</th>
                            <th>Total Column</th>
                            <th>Status</th>
                            <th>Plan Delivery</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in group)
                        {
                            <tr>
                                <td>@order.CustomerCode</td>
                                <td>@order.ShipDate.ToString("yyyy-MM-dd")</td>
                                <td>@order.TransCd</td>
                                <td>@order.TotalPallet</td>
                                <td>@order.TotalColumn</td>
                                <td>
                                    @{
                                        var status = order.OrderStatus switch
                                        {
                                            0 => "Planned",
                                            1 => "Pending",
                                            2 => "Completed",
                                            3 => "Shipped",
                                            _ => "Unknown"
                                        };
                                        var badgeClass = order.OrderStatus switch
                                        {
                                            0 => "bg-secondary",
                                            1 => "bg-info",
                                            2 => "bg-success",
                                            3 => "bg-warning",
                                            _ => "bg-danger"
                                        };
                                    }
                                    <span class="badge @badgeClass">@status</span>
                                </td>
                                <td>@order.EndTime.ToString("HH:mm")</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-primary" onclick="loadOrderDetails('@order.UId')">Details</a>
                                    @* Later: Add JS for modal or redirect *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Optional: DataTables for sorting/searching
        $(document).ready(function () {
            @{
                            foreach (var group in grouped)
                            {
                                            <text>
                                            $('#ordersTable_@group.Key.ToString("yyyyMMdd")').DataTable({
                                                "pageLength": 25,
                                                "order": [[1, "asc"]] // Sort by ShipDate
                                            });
                                            </text>
                            }
            }
        });

        function loadOrderDetails(uid) {
            // Placeholder: Fetch details via AJAX (for future expansion)
            alert('Loading details for Order: ' + uid);
        }
    </script>
}