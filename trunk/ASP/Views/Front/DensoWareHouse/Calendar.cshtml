@{
    ViewData["Title"] = "Denso Warehouse Calendar";
    Layout = "../Shared/Layout/Front/_Layout";
    var ordersJson = Newtonsoft.Json.JsonConvert.SerializeObject(Model);
}

<h1>Calendar DensoWareHouse</h1>

<div id="legend" style="margin: 20px auto; max-width: 100%; text-align: center;">
    <p><strong>Gợi ý:</strong></p>
    <p>Plan: Đường viền nét liền (solid border)</p>
    <p>Actual: Đường viền nét đứt (dashed border)</p>
</div>

<div id="calendar" style="max-width: 100%; height: 700px; margin: 20px auto;"></div>

<!-- FullCalendar CSS & JS -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@6.1.15/index.global.min.js"></script>

<!-- Custom CSS for dashed borders -->
<style>
    .fc-event.actual-event {
        border-style: dashed !important;
        border-width: 2px !important;
    }
</style>

<!-- File JS custom -->
<script src="~/js/Calendar.js"></script>