@using ASP.BaseCommon
@using ASP.Controllers.Admin
@using ASP.Models
@using ASP.Policies
@using Microsoft.AspNetCore.Authorization
@using ReflectionIT.Mvc.Paging
@inject IAuthorizationService AuthorizationService
@addTagHelper *, ReflectionIT.Mvc.Paging
@model ReflectionIT.Mvc.Paging.PagingList<ASP.Models.Admin.Menus.Menu>

@{
    ViewData["Title"] = "Menu";
    Layout = "../Shared/Layout/Admin/_Layout";
}

<style type="text/css">
    fieldset {
        min-width: 0;
        padding: 0 5px;
        margin: 0;
        border: 0;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    legend {
        display: block;
        width: inherit;
        max-width: 100%;
        padding: 0 10px;
        margin-bottom: .5rem;
        font-size: 1.1rem;
        line-height: inherit;
        color: inherit;
        white-space: normal;
        margin-left: 18px;
    }

    .box-message span.badge {
        margin-right: 5px;
    }

    #example1 thead th { vertical-align: middle; text-align: center; }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="min-height: 422px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            @if ((await AuthorizationService.AuthorizeAsync(User, new DocumentAuth(), PolicyOperations.ASPMenusCreate)).Succeeded)
                            {
                                <a class="btn btn-success add-button" asp-route="admin.menus.create"><i class="fas fa-plus-square"></i> Thêm mới</a>
                            }
                        </div><!-- /.col -->
                        <div class="col-md-6 col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a asp-route="admin.dashboard"><i class="fas fa-home"></i> Home</a></li>
                                <li class="breadcrumb-item active">Menu</li>
                            </ol>
                        </div><!-- /.col -->
                    </div>
                </div>
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-xs-12">
                    <div class="box">
                        <!-- /.box-header -->
                        <div class="clearfix box-body p-2">
                            <div class="row">
                                <div class="col-sm-8">
                                    <form method="get" class="search-form">
                                        <div class="input-group">
                                            <input class="form-control" id="psize" name="psize" type="hidden" value="@Model.RouteValue["psize"]">
                                            <input placeholder="Tìm kiếm theo: Code ..." class="form-control" name="filter" type="text" value="@Model.RouteValue["Filter"]">
                                            <div class="input-group-append">
                                                <button type="submit" class="btn btn-info">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <!-- /.input-group -->
                                    </form>
                                    <h1 class="clearfix"></h1>
                                </div>
                            </div>
                            <table id="example1" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th class="text-center">#</th>
                                        <th>@Html.SortableHeaderFor(model => model.ID)</th>
                                        <th>@Html.SortableHeaderFor(model => model.Name, "Name")</th>
                                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                                        <th>@Html.DisplayNameFor(model => model.Language)</th>
                                        <th>@Html.SortableHeaderFor(model => model.UpdatedDate)</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int count = 0;}
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td class="text-center">@count</td>
                                            <td>@item.ID</td>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>
                                                @if (item.Language == "en-US")
                                                {
                                                    <span class="sp-language"><img src="~/images/united-kingdom-flag-png-large.jpg" alt="UK" /></span>
                                                }
                                                else
                                                {
                                                    <span class="sp-language"><img src="~/images/japan-flag-png-large.jpg" alt="Japan" /></span>
                                                }
                                            </td>
                                            <td>@item.UpdatedDate</td>
                                            <td>
                                                @if ((await AuthorizationService.AuthorizeAsync(User, new DocumentAuth(), PolicyOperations.ASPMenusUpdate)).Succeeded)
                                                {
                                                    <a asp-route="admin.menus.show" asp-route-id="@item.ID" class="badge badge-primary" title="Sửa!"><i class="fas fa-edit"></i> Sửa</a>
                                                }
                                                @if ((await AuthorizationService.AuthorizeAsync(User, new DocumentAuth(), PolicyOperations.ASPMenusDelete)).Succeeded)
                                                {
                                                    <a onclick="return confirm('Bạn muốn xóa bản ghi này?')" asp-route="admin.menus.delete" asp-route-id="@item.ID" title="Xóa!" class="badge badge-danger"><i class="far fa-trash-alt"></i> Xóa</a>
                                                }
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <section class="sct-pagination">
                                <span class="page-count">Trang @Model.PageIndex / @Model.PageCount</span><span>, &nbsp;&nbsp;Tổng số bản ghi: @Model.TotalRecordCount</span>
                                <span>, &nbsp;&nbsp;Số bản ghi/trang</span>
                                <select asp-items="@ASP.BaseCommon.BaseController.BasePageSize()" asp-for="@Model.RouteValue["psize"]" class="slt-psize" name="slt-psize">
                                    <option value="">-- Any --</option>
                                </select>
                                <div class="pagination pagination-sm m-0 float-right">
                                    <nav aria-label="Products navigation example">
                                        <vc:pager paging-list="@Model" />
                                    </nav>
                                </div>
                            </section>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
