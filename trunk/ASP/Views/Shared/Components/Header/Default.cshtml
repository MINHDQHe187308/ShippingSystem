@{
    @model IEnumerable<ASP.Models.Admin.Menus.MenuDetail>
    string controller = ViewContext.RouteData.Values["Controller"].ToString();
    string action = ViewContext.RouteData.Values["Action"].ToString();
}
@using ASP.Models
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
<header>
    <style>
        /* Header menu: increase menu font size and make text bold black */
        #head-menu .navbar-nav .nav-link {
            font-size: 1.15rem !important; /* slightly larger */
            font-weight: 700 !important;   /* bold */
            color: #000 !important;        /* black */
        }
        /* Dropdown items (some are rendered as .nav-link inside dropdown-menu in this project) */
        #head-menu .dropdown-menu .nav-link,
        #head-menu .dropdown-menu .dropdown-item {
            font-size: 1.15rem !important;
            font-weight: 700 !important;
            color: #000 !important;
        }
        /* Ensure hover/active states remain readable */
        #head-menu .navbar-nav .nav-link:hover,
        #head-menu .dropdown-menu .nav-link:hover,
        #head-menu .dropdown-menu .dropdown-item:hover {
            color: #000 !important;
            text-decoration: none;
        }
        /* Toggler (mobile) menu links keep same style when collapsed */
        #head-menu .navbar-collapse .nav-link {
            font-size: 1.15rem !important;
            font-weight: 700 !important;
            color: #000 !important;
        }
        /* Hover animation / interaction: subtle lift, shadow and animated underline */
        #head-menu .navbar-nav .nav-link {
            display: inline-block; /* allow transform */
            position: relative;
            transition: transform 180ms cubic-bezier(.2,.8,.2,1),
                        color 150ms ease, background-color 150ms ease, box-shadow 180ms ease;
            will-change: transform, box-shadow;
            -webkit-font-smoothing: antialiased;
        }
        #head-menu .navbar-nav .nav-link::after {
            content: '';
            position: absolute;
            left: 8px;
            right: 8px;
            bottom: 6px;
            height: 2px;
            background: #000;
            width: 0%;
            transition: width 200ms ease;
            border-radius: 2px;
            opacity: 0.9;
        }
        #head-menu .navbar-nav .nav-link:hover,
        #head-menu .navbar-nav .nav-link:focus {
            transform: translateY(-3px) scale(1.02);
            background-color: rgba(0,0,0,0.04) !important;
            box-shadow: 0 6px 18px rgba(0,0,0,0.06) !important;
            color: #000 !important;
            text-decoration: none !important;
        }
        #head-menu .navbar-nav .nav-link:hover::after,
        #head-menu .navbar-nav .nav-link:focus::after {
            width: calc(100% - 16px);
        }
        /* Dropdown items animation (block-level) */
        #head-menu .dropdown-menu .dropdown-item,
        #head-menu .dropdown-menu .nav-link {
            transition: background-color 150ms ease, color 150ms ease, padding-left 180ms ease;
        }
        #head-menu .dropdown-menu .dropdown-item:hover,
        #head-menu .dropdown-menu .nav-link:hover {
            background-color: rgba(0,0,0,0.03);
            color: #000 !important;
            padding-left: 10px;
        }
    </style>
    <nav id="head-menu" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/assets/themeoptions/DENSO_logo.png" alt="Denso Viet Nam" width="140" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <!-- Menu bên trái -->
                <ul class="navbar-nav me-auto">
                    @foreach (var item in Model)
                    {
                        bool chkChildren = (item.children != null);
                        var strActive = chkChildren ? "dropdown" : "";
                        <li class="nav-item @strActive">
                            @if (chkChildren)
                            {
                                <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">@item.name</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @foreach (var item2 in item.children)
                                    {
                                        <li>
                                            <a class="nav-link text-dark" href="~/@item2.url" target="@item2.target">@item2.name</a>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <a class="nav-link text-dark" href="~/@item.url" target="@item.target">@item.name</a>
                            }
                        </li>
                    }
                </ul>

                <!-- Menu bên phải -->
                <ul class="navbar-nav ms-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-route="admin.auths.login">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i> Hello (@User.Identity.Name)
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownUser">
                                <li><a class="dropdown-item" href="~/admin"><i class="fas fa-cog me-1"></i> Admin page</a></li>
                                <li><a class="dropdown-item" asp-route="admin.auth.logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </nav>
</header>