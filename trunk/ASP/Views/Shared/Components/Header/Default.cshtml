@{
    @model IEnumerable<ASP.Models.Admin.Menus.MenuDetail>
    string controller = ViewContext.RouteData.Values["Controller"].ToString();
    string action = ViewContext.RouteData.Values["Action"].ToString();
}
@using ASP.Models
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
<header>
    <nav id="head-menu" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/assets/themeoptions/DENSO_logo.png" alt="Denso Viet Nam" width="140" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <!-- Menu bên trái -->
                <ul class="navbar-nav me-auto">
                    @foreach (var item in Model)
                    {
                        bool chkChildren = (item.children != null);
                        var strActive = chkChildren ? "dropdown" : "";
                        <li class="nav-item @strActive">
                            @if (chkChildren)
                            {
                                <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">@item.name</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @foreach (var item2 in item.children)
                                    {
                                        <li>
                                            <a class="nav-link text-dark" href="~/@item2.url" target="@item2.target">@item2.name</a>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <a class="nav-link text-dark" href="~/@item.url" target="@item.target">@item.name</a>
                            }
                        </li>
                    }
                </ul>

                <!-- Menu bên phải -->
                <ul class="navbar-nav ms-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-route="admin.auths.login">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i> Hello (@User.Identity.Name)
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownUser">
                                <li><a class="dropdown-item" href="~/admin"><i class="fas fa-cog me-1"></i> Admin page</a></li>
                                <li><a class="dropdown-item" asp-route="admin.auth.logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </nav>
</header>